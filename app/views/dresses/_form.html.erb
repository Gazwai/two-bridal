<%= simple_form_for(@dress) do |f| %>
  <%= f.input :brand %>
  <%= f.input :color %>
  <%= f.input :size, as: :select, collection: 0..100 %>
  <%= f.input :style, as: :select, collection: %w[Princess Mermaid A-Line Ballgown Empire
                                        Column Hi-Lo Trumpet Asymmetrical Bateau Mini] %>
  <%= f.input :description %>
  <%= f.input :price_per_day, input_html: { min: '1'} %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: 'btn btn-outline-secondary' %>
<% end %>
