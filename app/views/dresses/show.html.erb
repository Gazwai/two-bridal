<div class="container">

  <div>

    <%= @dress.photos.attached? ? cl_image_tag(@dress.photos.first.key) :
    cl_image_tag("c3mvlbwttkpafkm6iwqh") %>
    <%# image_tag('https://images.unsplash.com/photo-1557363763-8381968f8353?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80') %>

  </div>

  <div>
    <%= link_to "Delete", dress_path(@dress), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-dark" %>
  </div>
  <div>
    <%= link_to "Edit", edit_dress_path(@dress), class: "btn btn-outline-dark" %>
  </div>

  <div class="m-3">
    <h3><%= @dress.style %> style dress designed by <%= @dress.brand %></h3>
    <h4><%= @dress.description %></h4>
    <p>Size: <%= @dress.size %></p>
    <p>Color: <%= @dress.color %></p>
    <p>Price Per Day: $<%= @dress.price_per_day %>
  </div>

    <h3>This Dress's Reviews
      <%= link_to 'Leave a Review', new_dress_review_path(@dress), class: 'btn btn-outline-secondary'%>
    </h3>
      <ul class="list-unstyled pb-5">
        <% @dress.reviews.each do |review| %>
          <li class="mb-3 shadow-sm p-2"><%= review.comment %></li>
        <% end %>
      </ul>
      <br>

  <%= link_to 'Back', dresses_path, class: "btn btn-outline-dark mb-5" %>
</div>
