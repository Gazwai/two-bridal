<div class="container">
  <div class="row justify-content-center">
    <% if @dress.photos.attached? %>
      <% @dress.photos.each do |photo| %>
        <div class="dress-card text-center mb-3">
          <%= cl_image_tag photo.key %>
        </div>
      <% end %>
    <% elsif @dress.dress_url.present? %>
      <div class="dress-card text-center mb-3">
        <%= image_tag(@dress.dress_url) %>
      </div>
    <% else %>
      <div class="dress-card text-center mb-3">
        <%= cl_image_tag("c3mvlbwttkpafkm6iwqh") %>
      </div>
    <% end %>
  </div>

  <div class="m-3">
    <h3><%= @dress.style %> style dress designed by <%= @dress.brand %></h3>
    <h4><%= @dress.description %></h4>
    <p>Size: <%= @dress.size %></p>
    <p>Color: <%= @dress.color %></p>
    <p>Price Per Day: $<%= @dress.price_per_day %>
    <%= link_to 'Book Dress', new_dress_booking_path(@dress), class: 'btn btn-dark  float-right' %>
  </div>

    <h3 class="m-3 my-5">This Dress's Reviews
      <%= link_to 'Leave a Review', new_dress_review_path(@dress), class: 'btn btn-outline-secondary float-right'%>
    </h3>
      <ul class="list-unstyled pb-5">
        <% @dress.reviews.each do |review| %>
          <li class="mb-3 shadow-sm p-2"><%= review.comment %></li>
        <% end %>
      </ul>


  <%= link_to 'Back', dresses_path, class: "btn btn-outline-dark mb-5 mx-1" %>
  <%= link_to "Delete", dress_path(@dress), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-dark mb-5 mx-1" %>
  <%= link_to "Edit", edit_dress_path(@dress), class: "btn btn-outline-dark mb-5 mx-1" %>
</div>
