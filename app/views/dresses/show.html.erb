<div class="container">

  <%= render 'shared/carousel' %>

  <div class="m-3">
    <h3><%= @dress.style %> style dress designed by <%= @dress.brand %></h3>
    <p><%= @dress.description %></p>
    <p>Size: <%= @dress.size %></p>
    <p>Color: <%= @dress.color %></p>
    <p>Price Per Day: $<%= @dress.price_per_day %>
    <%= link_to 'Book Dress', new_dress_booking_path(@dress), class: 'btn btn-dark  float-right' %>
  </div>

    <h3 class="m-3 my-5">This Dress's Reviews
      <%= link_to 'Leave a Review', new_dress_review_path(@dress), class: 'btn btn-outline-secondary float-right'%>
    </h3>
      <ul class="list-unstyled pb-5">
        <% @dress.reviews.each do |review| %>
          <li class="mb-3 shadow-sm p-2"><%= '🤍' * review.rating %> - <%= current_user.first_name %>
          <p class="p-2"><%= review.comment %></p></li>
        <% end %>
      </ul>


  <%= link_to 'Back', :back, class: "btn btn-outline-secondary mb-5 mx-1" %>
</div>
