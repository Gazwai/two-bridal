<div class="container">
  <h2 class="my-3">
    <% if @search == nil %>
    All Our Dresses
    <% elsif @dresses.count > 1 %>
      <%= @dresses.count %> dresses found for you
    <% elsif @dresses.count == 1 %>
      <%= @dresses.count %> dress found for you
    <% else %>
      Sorry, no results were found for "<%= @search %>."
    <% end %>
  <%# <% @dresses.count > 1 ? @dresses.count dresses :
     @dresses.count dress %>
  </h2>

  <div class="row justify-content-center">
    <% @dresses.each do |dress| %>
    <div class="dress-card text-center mb-3">
      <%= link_to dress_path(dress) do %>
        <% if dress.photos.attached? %>
          <%= cl_image_tag(dress.photos.first.key) %>
        <% elsif dress.dress_url.present? %>
          <%= image_tag(dress.dress_url) %>
        <% else %>
          <%= image_tag("bridal_gown_silhouette.png") %>
        <% end %>
      <% end %>
      <span class="favorite"><%= link_to "", dresses_path, class: "fa fa-heart"%></span>
      <p><%= dress.description %></p>
      <p>$<%= dress.price_per_day %> per day</p>
    </div>
    <% end %>
  </div>
</div>
