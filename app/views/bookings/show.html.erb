<div class="container">

  <div>

    <%= @dress.photos.attached? ? cl_image_tag(@dress.photos.first.key) :
    image_tag('https://images.unsplash.com/photo-1557363763-8381968f8353?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80') %>

  </div>

  <div>
    <%= link_to 'Accept', booking_path(@booking), method: :patch, data: {confirm: "Are you sure?", params: {item: {status: 1 } } }, class: "btn btn-outline-dark"%>
  </div>
  <div>
    <%= link_to 'Reject', booking_path(@booking), method: :patch, data: {confirm: "Are you sure?", params: {item: {status: 2 } } }, class: "btn btn-outline-dark"%>
  </div>
<%
=begin %>
  <div>
    <%= link_to 'Cancel', booking_path(@booking), method: :patch, data: {confirm: "Are you sure?", params: {item: {status: 3 } } }, class: "btn btn-outline-dark"%>
  </div>
  <div>
    <%= link_to 'Complete', booking_path(@booking), method: :patch, data: {confirm: "Are you sure?", params: {item: {status: 4 } } }, class: "btn btn-outline-dark"%>
  </div>
<%
=end %>
