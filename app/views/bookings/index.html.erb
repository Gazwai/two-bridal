<div class="container">

  <h1 class="m-2">Your bookings</h1>
  <div class="row justify-content-center">
    <% @bookings.each do |booking| %>
      <% if booking.user == current_user %>
       <%# this if checks that the user is the person booking the dress %>
      <% booked_dress = Dress.find(booking.dress_id) %>
        <div class="dress-card text-center mb-3">
          <%= link_to booking_path(booking) do %>
            <%# Image tag to be updated with cloudinary %>
            <%= booked_dress.photos.attached? ? cl_image_tag(booked_dress.photos.first.key) :
            image_tag('https://images.unsplash.com/photo-1557363763-8381968f8353?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80') %>
          <% end %>
          <p>Booking-ID:<%= booking.id %></p>
          <% booker = User.find(booking.user_id) %>
          <p>Booker:<%= booker.last_name%></p>
          <p><%= booked_dress.description %></p>
          <p>$<%= booked_dress.price_per_day %> per day</p>
          <p><%= booking.starting_date %></p>
          <p><%= booking.ending_date %></p>
        </div>
      <% end %>
    <% end %>
  </div>

  <h1 class="m-2">Your booked listings</h1>
  <div class="row justify-content-center">
    <% @bookings.each do |booking| %>
      <% if booking.dress.user == current_user %>
      <%# this if checks that the user is the owner of the dress %>
      <% listed_dress = Dress.find(booking.dress_id) %>
        <div class="dress-card text-center mb-3">
          <%= link_to booking_path(booking) do %>
            <%# Image tag to be updated with cloudinary %>
            <%= listed_dress.photos.attached? ? cl_image_tag(listed_dress.photos.first.key) :
            image_tag('https://images.unsplash.com/photo-1557363763-8381968f8353?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80') %>
          <% end %>
          <p>Booking-ID:<%= booking.id %></p>
          <% booker = User.find(booking.user_id) %>
          <p>Booker:<%= booker.last_name%></p>
          <p><%= listed_dress.description %></p>
          <p>$<%= listed_dress.price_per_day %> per day</p>
          <p><%= booking.starting_date %></p>
          <p><%= booking.ending_date %></p>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
