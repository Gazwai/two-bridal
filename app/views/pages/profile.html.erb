<div class="container">
  <div class="row justify-content-between">
    <div class="user-info mr-5 m-3 col-4">
      <h3>User Information</h3>
      <ul class="list-unstyled">
      <li>Full Name: <%= "#{current_user.first_name} #{current_user.last_name}" %></li>
      <li>Current email address: <%= current_user.email %></li>
      <li></li>
      </ul>
    </div>

    <div class="booking-info m-3 col-6">
      <h3 class="text-center">Bookings</h3>
      <% @bookings.each do |booking| %>
      <div class="dress-card text-center mb-3">
        <%= link_to dress_path(booking.dress) do %>
          <%# Image tag to be updated with cloudinary %>
          <%= booking.dress.photos.attached? ? cl_image_tag(booking.dress.photos.first.key) :
          cl_image_tag("c3mvlbwttkpafkm6iwqh") %>
          <%# image_tag('https://images.unsplash.com/photo-1557363763-8381968f8353?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80') %>
        <% end %>
          <p>Booked from <%= booking.starting_date %> until <%= booking.ending_date %></p>
      </div>
      <% end %>
    </div>


  </div>
</div>
